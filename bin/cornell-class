  'crseId',
 x'crseOfferNbr',
  'subject',
  'catalogNbr',
  'titleShort',
  'titleLong',
o>'enrollGroups',
  'description',
  'catalogBreadth',
  'catalogDistr',
 m'catalogLang',
  'catalogForbiddenOverlaps',
  'catalogWhenOffered',
 m'catalogComments',
  'catalogPrereqCoreq',
  'catalogFee',
  'catalogSatisfiesReq',
  'catalogPermission',
  'catalogCourseSubfield',
  'catalogOutcomes',
  'acadCareer',
  'acadGroup' ]
 */

