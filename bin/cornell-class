var acad_groups = {
  'EN' : 'Engineering.',
  'AS' : 'Arts & Sciences.',
  'HE' : 'Human Ecology.',
  'HA' : 'Hotel Administration.',
  'AR' : 'Arch. Art & Planning.',
  'AG' : 'Ag. & Life Sciences.',
  'IL' : 'Ind. & Labour Rel.',
};
